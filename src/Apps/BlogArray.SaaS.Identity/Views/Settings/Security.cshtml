@{
    Layout = "~/Views/Shared/_SettingsLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Security</h3>
        <p class="mb-0 form-text">
            Change your password and manage 2FA here.
        </p>
    </div>
    <div class="card-body">
        <div id="password">
            <partial name="Password.cshtml" />
        </div>
        <hr class="my-5">
        <div id="mfa">
            <h6 id="password" class="mb-4 mt-5">
                Two-factor Authentication (2FA)
            </h6>
            <p>
                The two-factor authentication provides you with an additional level of security by requiring more than just a password to access your account.
            </p>
            <a asp-page="/settings/twofactorauthentication">
                Manage 2FA
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>

    function loadPwdForm() {
        $("#password").load('@Url.Action("Password", "Settings")');
    }

</script>