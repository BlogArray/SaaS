@{
    ViewData["Title"] = "Error";
    var exception = ViewData["Exception"] as Exception;
}

@if (System.Net.HttpStatusCode.NotFound.ToString() == "NotFound")
{
    <div class="container">
        <img src="https://i.imgur.com/qIufhof.png" alt="error icon" />

        <h1>
            <span>404</span> <br />
            Look like you're lost
        </h1>
        <p>the page you are looking for not avaible!</p>
    </div>

}
else
{
    <div class="container">
        <img src="https://i.imgur.com/qIufhof.png" alt="error icon" />

        <h1>
            <span>500</span> <br />
            Internal server error
        </h1>
        <p>We are currently trying to fix the problem.</p>
    </div>

}

<style>
    .container {
        text-align: center;
        margin: auto;
        padding: 4em;
    }

        .container img {
            width: 256px;
            height: 225px;
        }

        .container h1 {
            margin-top: 1rem;
            font-size: 35px;
            text-align: center;
        }

            .container h1 span {
                font-size: 60px;
            }

        .container p {
            margin-top: 1rem;
        }

            .container p.info {
                margin-top: 4em;
