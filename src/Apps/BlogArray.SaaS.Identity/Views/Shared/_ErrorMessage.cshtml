@if (ViewBag.Alert is not null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @ViewBag.Alert
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
