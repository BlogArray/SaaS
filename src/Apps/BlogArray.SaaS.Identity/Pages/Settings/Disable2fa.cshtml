@page
@model Disable2faModel
@{
    Layout = "~/Views/Shared/_SettingsLayout.cshtml";
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card">
    <div class="card-header">
        <h3 class="mb-0">Disable two-factor authentication (2FA)</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <p>
                <strong>This action disables 2FA.</strong>
            </p>
            <p>
                By disabling Two-factor Authentication (2FA), your account will be no longer protected by a second login step.
            </p>
        </div>

        <form method="post">
            <button class="btn btn-primary" type="submit">Disable 2FA</button>
        </form>
    </div>
</div>