@model EditApplicationViewModel

<div class="d-flex align-items-center justify-content-between">
    <h5 class="mb-0">Basic info</h5>
    <div class="ms-auto">
        @Html.AjaxActionLink("Edit", "EditBasicInfo", "Tenants", new { @id = Model.Id }, new AjaxOptions
   {
       UpdateTargetId = "changeTenantInfo",
       OnSuccess = "tenantEditFormLoaded"
   }, new { @class = "bi-mr bi bi-pencil btn btn-primary btn-sm" })
    </div>
</div>
<p>
    Basic info of tenant
</p>
<dl class="row">
    <dt class="col-md-3 fw-medium">Legal name</dt>
    <dd class="col-md-9">@Model.Legalname</dd>
    <dt class="col-md-3 fw-medium">Display name</dt>
    <dd class="col-md-9">@Model.DisplayName</dd>
    <dt class="col-md-3 fw-medium">Tenant url</dt>
    <dd class="col-md-9">
        <a href="@Model.TenantUrl" target="_blank">@Model.TenantUrl<i class="bi bi-box-arrow-up-right ms-2"></i></a>
    </dd>
    <dt class="col-md-3 fw-medium">Connection string</dt>
    <dd class="col-md-9">
        @if (Model.ConnectionString?.Length > 0)
        {
            <span>Configured</span>
        }
        else
        {
            <span>Not configured</span>
        }
    </dd>

    <dt class="col-md-3 fw-medium">Website</dt>
    <dd class="col-md-9">@Model.Website</dd>
    <dt class="col-md-3 fw-medium">Description</dt>
    <dd class="col-md-9">@Model.Description</dd>
    <dt class="col-md-3 fw-medium">Redirect Uri</dt>
    <dd class="col-md-9">@Model.RedirectUri</dd>
    <dt class="col-md-3 fw-medium">Post Logout Redirect Uri</dt>
    <dd class="col-md-9">@Model.PostLogoutRedirectUri</dd>
</dl>
