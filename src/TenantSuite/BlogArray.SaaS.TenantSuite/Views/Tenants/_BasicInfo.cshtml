@model EditApplicationViewModel

<div class="d-flex align-items-center justify-content-between">
    <h5 class="mb-0">Basic info</h5>
    <div class="ms-auto">
        @Html.AjaxActionLink("Edit", "EditBasicInfo", "Tenants", new { @id = Model.Id }, new AjaxOptions
   {
       UpdateTargetId = "changeTenantInfo",
       OnSuccess = "tenantEditFormLoaded"
   }, new { @class = "bi-mr bi bi-pencil btn btn-primary btn-sm" })
    </div>
</div>
<p>
    Basic info of tenant.
</p>
<dl class="row">
    <dt class="col-md-3">Legal name</dt>
    <dd class="col-md-9">@Model.Legalname</dd>
    <dt class="col-md-3">Display name</dt>
    <dd class="col-md-9">@Model.DisplayName</dd>
    <dt class="col-md-3">Connection string</dt>
    <dd class="col-md-9">
        @if (Model.ConnectionString?.Length > 0)
        {
            <span>Configured</span>
        }
        else
        {
            <span>Not configured</span>
        }
    </dd>

    <dt class="col-md-3">Website</dt>
    <dd class="col-md-9">@Model.Website</dd>
    <dt class="col-md-3">Description</dt>
    <dd class="col-md-9">@Model.Description</dd>
    <dt class="col-md-3">Redirect Uri</dt>
    <dd class="col-md-9">@Model.RedirectUri</dd>
    <dt class="col-md-3">Post Logout Redirect Uri</dt>
    <dd class="col-md-9">@Model.PostLogoutRedirectUri</dd>
</dl>
