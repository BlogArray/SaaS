@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}
<div class="container my-5 text-center">
    <div class="p-5">
        <div class="text-center">
            <img src="~/_content/BlogArray.SaaS.Resources/resources/svg/server-down.svg" class="state-img" alt="error" />
        </div>
        <h1 class="text-body-emphasis mt-3">@ViewData["Title"]</h1>
        <p class="col-lg-8 fs-5 mx-auto text-muted">
            @ViewData["ErrorMessage"]
        </p>
        <div class="d-inline-flex gap-2 mb-3">
            <a class="btn btn-primary" href="/">
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                     viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z" />
                </svg>
                Home
            </a>
        </div>
    </div>
</div>