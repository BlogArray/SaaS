@using System.Security.Claims
@inject SignInManagerExtension<ApplicationUser> SignInManager
@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<div class="app-layout">
    <nav class="navbar navbar-expand-lg fixed-top bg-body app-navbar border-bottom">
        <div class="container-fluid">
            <button class="navbar-toggler border-0" type="button" aria-label="Toggle navigation"
                    onclick="toggleMobileMenu()">
                <i class="bi bi-list"></i>
            </button>
            <a class="navbar-brand" style="font-size:1.5rem" asp-area="" asp-controller="Settings" asp-action="Index">
                <img src="~/_content/BlogArray.SaaS.Resources/resources/images/logo-full.png" alt="Logo" height="30"
                     class="d-inline-block align-text-top">
                <span class="mx-1 d-none d-md-inline fw-normal">Identity</span>
            </a>
            <div class="text-end d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <partial name="_LoginPartial" />
                }
            </div>
        </div>
    </nav>
    @RenderBody()
</div>
@await RenderSectionAsync("Scripts", required: false)

<script>
    function toggleMobileMenu() {
        $('#app-main').toggleClass('open');
    }
</script>