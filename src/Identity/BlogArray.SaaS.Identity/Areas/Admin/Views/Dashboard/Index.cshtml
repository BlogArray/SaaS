@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}
<h3>Dashboard</h3>
<div class="row">
    <div class="col-lg-6 col-md-12 col-12">
        <div class="card mb-4">
            <div class="px-4 py-2">
                <div class="d-flex align-items-center justify-content-between">
                    <span class="fs-6 text-uppercase fw-semibold">
                        Tenants
                    </span>
                </div>
                <h2 class="fw-bold d-flex align-items-center h1 lh-1">
                    @Model.Applications
                </h2>
                <span class="d-flex justify-content-between align-items-center">
                    <span>Last month</span>
                    <span class="badge @(Model.PrevApplications>0?"bg-success":"bg-secondary") ms-2">
                        <i class="bi @(Model.PrevApplications>0?"bi-arrow-up":"")"></i>
                        @Model.PrevApplications
                    </span>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-12 col-12">
        <div class="card mb-4">
            <div class="px-4 py-2">
                <div class="d-flex align-items-center justify-content-between">
                    <span class="fs-6 text-uppercase fw-semibold">
                        Users
                    </span>
                </div>
                <h2 class="fw-bold d-flex align-items-center h1 lh-1">
                    @Model.Users
                </h2>
                <span class="d-flex justify-content-between align-items-center">
                    <span>Last month</span>
                    <span class="badge @(Model.PrevUsers>0?"bg-success":"bg-secondary") ms-2">
                        <i class="bi @(Model.PrevUsers>0?"bi-arrow-up":"")"></i>
                        @Model.PrevUsers
                    </span>
                </span>
            </div>
        </div>
    </div>
</div>