@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}
<form method="post">
    <h6 class="text-center mb-3">
        Forgot your password?
    </h6>
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="w-100 btn btn-primary">Reset Password</button>
</form>

<div class="text-center mt-3">
    <p>
        <a asp-page="./Login">Go back to login</a>
    </p>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
